<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5FAF7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Logo and Profile Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Logo -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/logo_no_background1" />

            <!-- Profile Button -->
            <ImageButton
                android:id="@+id/profile_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_manage"
                android:background="@android:color/transparent"
                android:contentDescription="Profile Button"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Main Workflow -->
        <LinearLayout
            android:id="@+id/Main_workflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/main_table"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:stretchColumns="1"
                android:padding="7dp"
                android:background="@drawable/rounded_table_background"
                android:layout_margin="8dp">

                <!-- Header Row -->
                <TableRow android:background="@color/mainblue">
                    <TextView
                        android:text="Product"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/mint" />
                    <TextView
                        android:text="Amount"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/mint" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />

                <ImageButton
                    android:id="@+id/plus_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/plus_icon"
                    android:background="@color/mint"
                    android:scaleType="centerInside"
                    android:layout_margin="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
